<div class='container h-screen'>
  <% flash&.each do |key, value| %>
    <% if key == 'alert' %>
      <%= render 'error_alert', errors: value %>
    <% elsif key == 'success' %>
      <%= render 'success_alert', msg: value %>
    <% end %>
  <% end %>


  <h1 class='text-5xl font-extrabold'>Please import CSV here</h1>

  <%= form_tag importer_path, multipart: true do %>
    <div>
      <%= file_field_tag :csv, accept: 'text/csv' %>
    </div>

    <div>
      <%= submit_tag :submit, class: 'bg-sky-500 hover:bg-sky-700 px-5 py-2 text-sm leading-5 rounded-full font-semibold text-white' %>
    </div>
  <% end %>
</div>